<odoo>

    <record id="library_checkout_kanban" model="ir.ui.view">
        <field name="name">Kanban view</field>
        <field name="model">library.checkout</field>
        <field name="arch" type="xml">

            <kanban default_group_by="stage_id">
                <field name="name" />
                <template>
                    <t t-name="kanban-box">
                        <div>
                            <field name="name" />
                        </div>
                    </t>
                </template>
            </kanban>

        </field>
    </record>

</odoo>